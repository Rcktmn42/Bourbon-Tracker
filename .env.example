# NC Bourbon Tracker - Environment Configuration Template
# Copy this file to .env and fill in your actual values

# ===== CORE APPLICATION =====
NODE_ENV=development
PORT=3000
FRONTEND_URL=http://localhost:5173

# ===== AUTHENTICATION & EMAIL =====
# Generate a strong JWT secret: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
JWT_SECRET=change-me-in-prod-use-64-char-random-string

# Gmail configuration for email verification
EMAIL_USER=your_gmail_address@gmail.com
EMAIL_PASS=your_gmail_app_password
EMAIL_FROM_NAME=WakePour
EMAIL_FROM_ADDRESS=
ADMIN_EMAIL=admin@example.com

# ===== DATABASE CONFIGURATION =====
# Database client: 'sqlite3' for SQLite or 'pg' for PostgreSQL
DB_CLIENT=sqlite3

# For SQLite (file paths):
DATABASE_URL=./backend/data/database.sqlite3
INVENTORY_DATABASE_URL=./BourbonDatabase/inventory.db

# For PostgreSQL (uncomment and modify when migrating):
# DATABASE_URL=postgresql://username:password@localhost:5432/bourbon_tracker
# INVENTORY_DATABASE_URL=postgresql://username:password@localhost:5432/bourbon_inventory

# ===== FILE STORAGE =====
# Directory for product images
IMAGES_DIR=./BourbonDatabase/alcohol_images

# ===== PRODUCTION OVERRIDES =====
# These are automatically set in production, but can be overridden
# IMAGES_DIR=/opt/alcohol_images
# DATABASE_URL=/opt/bourbon-tracker/data/database.sqlite3
# INVENTORY_DATABASE_URL=/opt/BourbonDatabase/inventory.db

# ===== OPTIONAL CONFIGURATION =====
# Rate limiting (requests per window)
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
AUTH_RATE_LIMIT_MAX=5

# Session configuration
SESSION_SECRET=another-random-secret-for-sessions
COOKIE_SECURE=false
COOKIE_SAME_SITE=lax

# ===== MONITORING & LOGGING =====
# Logging level: error, warn, info, debug
LOG_LEVEL=info
LOG_FORMAT=combined

# External services (stubs for future use)
SENTRY_DSN=
CLOUDWATCH_LOG_GROUP=